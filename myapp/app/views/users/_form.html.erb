<%= form_for  @user  do |form| %>
    <form>
    <% if @user.errors.any? %>
            <div id="error_explanation">
            <h6>
                <%= pluralize(@user.errors.count, "error") %> prohibited
                this user from being saved:
            </h6>
            <ul>
                <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
                <% end %>
            </ul>
            </div>
    <% end %> 
    <div class="form-group">
        <%= form.label 'username', 'Username'%>
        <%= form.text_field :username, class: 'form-control', autofocus: true,placeholder:"Enter Username" %>
    </div>
    <div class="form-group">
        <%= form.label 'email', 'Email Address'%>
        <%= form.text_field :email,  class: 'form-control', autofocus: true,placeholder:"Enter Email" %>
        <small id="emailHelp" class="form-text text-muted"> We will never share your email with anyone. </small>
    </div>
    <div class="form-group">
        <%= form.label 'phone_number', 'Phone Number'%>
        <%= form.text_field :phone_number, class: 'form-control', autofocus: true,placeholder:"Enter Phone Number" %>
    </div>
    <%= form.submit 'Submit', :class => 'btn btn-primary btn-sm btn-submit' %> 
    <%= link_to "Back" , users_path, class: 'btn btn-default btn-sm'%>
</form>
<% end %>

     

